{
  "name": "everydai-desktop",
  "version": "1.0.0",
  "description": "Desktop helper for everydAI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "everydai",
    "ai",
    "assistant",
    "desktop"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.everydai.desktop",
    "productName": "everydAI Desktop",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
